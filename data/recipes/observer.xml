<?xml version="1.0"?>
<!--@scope global@-->
<!--@type singleton@-->
<!--@docstring Event observer declaration@-->
<config>
  <%scope%>
    <events>
      <%event%>
        <observers>
          <%unique_event_handle%>
            <type>%type%</type>
            <class>%class_handle%</class>
            <method>%method%</method>
          </%unique_event_handle%>
        </observers>
      </%event%>
    </events>
  </%scope%>
</config>
